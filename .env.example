# =============================================================================
# MoonTrack Environment Configuration
# =============================================================================
# Copy this file to .env and update with your values
# NEVER commit .env to git (it contains secrets!)

# =============================================================================
# Database Configuration (PostgreSQL)
# =============================================================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=moontrack_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# Full connection URL (auto-generated in docker-compose, but can override)
DATABASE_URL=postgres://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}?sslmode=disable

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=${REDIS_HOST}:${REDIS_PORT}

# =============================================================================
# Backend API Configuration
# =============================================================================
API_HOST=localhost
API_PORT=8080

# JWT Secret (CHANGE THIS IN PRODUCTION!)
# Must be at least 32 characters
JWT_SECRET=dev-secret-key-change-in-production-min-32-chars-long-please-update-this

# Environment (development, staging, production)
ENV=development

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# =============================================================================
# External APIs
# =============================================================================
# CoinGecko API - Get free key from https://www.coingecko.com/en/api
COINGECKO_API_KEY=

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_BASE_URL=http://${API_HOST}:${API_PORT}/api/v1
